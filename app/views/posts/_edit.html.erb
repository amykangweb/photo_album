<i class="glyphicon glyphicon-remove remove-form"></i>
<div class="post-form">
<div class="inner-post-form">
<div class="tiny_spacer"></div>
<h3>Edit Photo</h3>

<div class="edit-image">
  <%= image_tag post.image.url %>
</div>

<div class="small_spacer"></div>

<%= form_for(post, remote: true) do |f| %>
<div class="error_explanation <%= post.id %>">
</div>

  <div class="form-group">
    <%= f.file_field :image, accept: 'image/jpeg,image/jpg,image/gif,image/png', class: "form-control" %>
    <p class="text-left"><%= f.check_box :remove_image %>&nbsp;Remove Image *</p>
  </div>
  <div class="form-group">
    <%= f.label :caption, class: "text-left" %><br>
    <%= f.text_field :caption, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
</div>
</div>
