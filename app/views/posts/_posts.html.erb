<%= will_paginate posts %>

<% posts.each do |post| %>
  <%= image_tag post.image.url %>
  <%= post.caption %>
  <% if user_signed_in? && current_user.admin %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>

<%= will_paginate posts %>
